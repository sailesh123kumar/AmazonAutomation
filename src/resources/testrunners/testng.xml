<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" thread-count="3" verbose="3" parallel="tests">
  
    <listeners>
		<listener class-name="com.qa.amazon.listeners.ExtentReportListener">
		</listener>
		<listener class-name="com.qa.amazon.listeners.TestAllureListener">
		</listener>
	</listeners>
  
  <test  name="ProductPageTest" >
	  <parameter name="browser" value="edge"></parameter>
    <classes>
      <class name="com.qa.amazon.test.ProductPageTest"/>
    </classes>
  </test> 
  
  <test  name="AmazonHomePageTest" >
	  <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="com.qa.amazon.test.AmazonHomePageTest"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
